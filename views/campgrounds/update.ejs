<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Campgrounds</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= found.id %>?_method=PUT" method="post" novalidate class="validation-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title"><b>Title</b></label>
                <input class="form-control" type="text" id="title" name="campground[title]" 
                value="<%= found.title %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location"><b>Enter Location:</b></label>
                <input class="form-control" type="text" id="location" name="campground[location]" 
                value="<%= found.location %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="campground[price]"  
                        value="<%= found.price %>" required>
                </div>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description"> <b>Description</b></label>
                <textarea class="form-control" id="description" name="campground[description]" required><%= found.description %></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="image"> <b>Add Images</b></label>
                <input type="file" class="form-control" id="image" name="image" multiple>
                <div id="file-names-display" class="mt-2"></div>
            
                 <script>
                    document.getElementById('image').addEventListener('change', function() {
                        const files = this.files;
                        const fileNamesDisplay = document.getElementById('file-names-display');
                        fileNamesDisplay.innerHTML = '';
            
                        if (files.length > 0) {
                            const fileList = document.createElement('ul');
                            fileList.classList.add('list-unstyled');
            
                            for (const file of files) {
                                const listItem = document.createElement('li');
                                listItem.textContent = file.name;
                                fileList.appendChild(listItem);
                            }
                            fileNamesDisplay.appendChild(fileList);
                        }
                    });
                </script>
            </div>

            <div class="mb-3">
                <% found.images.forEach(function(img,i) { %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail"  alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename%>">
                    </div>   
                    <label for="image-<%= i %>">Delete?</label>
                <% }) %>    
            </div>
            
            <div class="mb-3">
                <button class="btn btn-info"> Update CampGround </button>
            </div>
        </form>
        <a href="/campgrounds/<%= found._id %>"> <button class="btn btn-danger"> Cancel</button></a>
    </div>
</div>
